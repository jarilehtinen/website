html
    font-family fonts

h1
    margin 0 0 .2em 0
    font-family titleFonts
    font-size 5vw
    font-weight 700
    line-height 1em
    letter-spacing -.02em

    a
        text-decoration none
        color #000

    @media only screen and (max-width: 1300px)
        font-size 5vw

    @media only screen and (max-width: 850px)
        font-size 8vw
        line-height 1.2em

    @media only screen and (max-width: 650px)
        font-size 10vw
        line-height 1.1em

h2
    font-family titleFonts
    font-size 2.2em
    font-weight 700
    margin 1.5em 0 .7em 0

    @media only screen and (max-width: 850px)
        font-size 1.6em

h3
    font-family titleFonts
    font-size 1.4em
    margin 1.2em 0 .5em 0

    @media only screen and (max-width: 850px)
        font-size 1.3em

p
    font-size 1.6em
    line-height 1.45em
    margin 0 0 .9em 0
    color #000

    code
        font-size .8em
        background-color rgba(255,255,255,0.3)
        vertical-align middle
        color #000

        @media (prefers-color-scheme: dark)
            background-color codeDark
            color #fff
            border-radius 3px

    @media only screen and (max-width: 650px)
        font-size 1.3em
        line-height 1.25em

a
    color #000

    &:hover
        text-decoration underline
        text-underline-offset 5px

    @media (prefers-color-scheme: dark)
        color yellow


strong
    font-weight 700

ul
    margin .5em 0 .7em 2em
    font-size 1.6em
    line-height 1.45em
    color #000

    @media only screen and (max-width: 650px)
        font-size 1.3em
        line-height 1.25em

code
    display inline-block
    padding .4em .5em
    font-size 1.15em
    line-height 1.35em
    color #444
    overflow auto
    white-space pre

pre
    margin 1.2em 0 1.5em 0
    padding .9em .95em
    font-family monospace
    font-size 1em
    overflow auto
    background codeLight

    @media only screen and (max-width: 650px)
        font-size 1.05em

    code
        display block
        line-height 1.35em
