.posts-post
    border-bottom 1px solid #000
    padding 2em 0

    .post-title
        margin-bottom .1em
        max-width 70%

        @media only screen and (max-width: 1000px)
            max-width 100%

    .post-date
        display block
        margin 0

        @media only screen and (max-width: 650px)
            margin-top 0

.posts-post:first-child
    padding-top 0

.posts-post:last-child
    border-bottom 0

