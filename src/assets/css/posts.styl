.posts
    margin-left 95px

    @media only screen and (max-width: 800px)
        margin-left 0

.posts-post
    padding 2em 0

    .post-title
        margin-bottom .1em

        @media only screen and (max-width: 1000px)
            max-width 100%

    .post-date
        display block
        margin 0

        @media only screen and (max-width: 650px)
            margin-top 0

    .post-description
        font-family smallFonts
        font-size 1.4em
        margin 0 0 .5em 0

        @media only screen and (max-width: 650px)
            font-size 1.2em
            
.posts-post:first-child
    padding-top 0

.posts-post:last-child
    border-bottom 0

