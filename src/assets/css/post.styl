.post-title
    text-decoration none
    max-width 90%

    @media only screen and (max-width: 850px)
        max-width 100%

.post-date
    display block
    font-size 1.5em
    background-image url(/images/date.svg)
    background-size auto 20px
    background-position left center
    padding-left 30px
    color #888

    @media only screen and (max-width: 650px)
        font-size 1.3em

.post-text
    max-width 750px
    margin 0 0 0 15vw

    @media only screen and (max-width: 1000px)
        margin 0 0 0 10vw

    @media only screen and (max-width: 850px)
        margin 0

.post
    margin-bottom 5em

    .post-title
        font-size 8vw
        line-height .95em
        letter-spacing -.03em
        margin-bottom .1em

        @media only screen and (max-width: 1200px)
            font-size 12vw

        @media only screen and (max-width: 1000px)
            font-size 12vw

        @media only screen and (max-width: 650px)
            font-size 14vw
            line-height 1.1em


    .post-date
        margin 0 0 2em 0

        @media only screen and (max-width: 650px)
            padding-left 0
            margin-top -.2em
            margin-bottom 1em

    img
        width 100%
        height auto
        margin-top 1em